#!/bin/bash

echo ""
echo "  Setting up your site..."
echo ""

# Check for Node.js
if ! command -v node &> /dev/null; then
    echo "  Node.js isn't installed yet."
    echo ""
    echo "  The easiest way to install it:"
    echo "    - Go to https://nodejs.org"
    echo "    - Download the LTS version"
    echo "    - Run the installer"
    echo "    - Then come back and run this again"
    echo ""
    exit 1
fi

NODE_VERSION=$(node -v | cut -d'v' -f2 | cut -d'.' -f1)
if [ "$NODE_VERSION" -lt 18 ]; then
    echo "  Your Node.js is too old (need version 18+, you have $(node -v))."
    echo "  Update at https://nodejs.org"
    exit 1
fi

echo "  Node.js found ($(node -v))"
echo ""

echo "  Installing site dependencies..."
npm install --silent
echo "  Dependencies installed"
echo ""

echo "  ─────────────────────────────────────────"
echo ""
echo "  You're all set! To see your site, run:"
echo ""
echo "    ./go"
echo ""
echo "  ─────────────────────────────────────────"
echo ""
