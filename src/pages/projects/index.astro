---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentCard from '../../components/ContentCard.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const projects = (await getCollection('projects', ({ data }) => data.published))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Projects â€” Audrey Evergreene">
  <h1 class="text-3xl font-bold mb-8">Projects</h1>

  {projects.length === 0 ? (
    <p class="text-text-secondary">
      No projects yet. Add a markdown file to <code>src/content/projects/</code> to get started.
    </p>
  ) : (
    <div class="grid gap-4">
      {projects.map((project) => (
        <ContentCard
          title={project.data.title}
          description={project.data.description}
          href={`${base}/projects/${project.slug}/`}
          date={project.data.date}
          tags={project.data.tags}
        />
      ))}
    </div>
  )}
</BaseLayout>
