---
import ContentLayout from '../../layouts/ContentLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const writing = await getCollection('writing', ({ data }) => data.published);
  return writing.map((piece) => ({
    params: { slug: piece.slug },
    props: { piece },
  }));
}

const { piece } = Astro.props;
const { Content } = await piece.render();
const isPoetry = piece.data.genre === 'poetry';
---

<ContentLayout
  title={piece.data.title}
  description={piece.data.description}
  date={piece.data.date}
  updated={piece.data.updated}
  tags={piece.data.tags}
>
  {piece.data.cover && (
    <img src={piece.data.cover} alt={piece.data.title} class="w-full rounded-lg mb-6 not-prose" />
  )}
  {isPoetry ? (
    <div class="whitespace-pre-line">
      <Content />
    </div>
  ) : (
    <Content />
  )}
</ContentLayout>
